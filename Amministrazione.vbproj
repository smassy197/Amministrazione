    <EmbeddedResource Remove="bin\Debug\net8.0-windows10.0.17763.0\**" />
    <None Remove="bin\Debug\net8.0-windows10.0.17763.0\**" />
  </ItemGroup>

  

  <ItemGroup>
    <Content Include="amministrazione_new_logo.ico" />
